<div class='container'>
  <section class='columns posts-container'>
    <section class='column'>
      <h2 class='title'>Latest Posts</h2>
      <ul>
        {{#each posts as |post|}}
          <li class='card mb-3'>
            <header
              class='card-header has-background-primary py-2 px-3 is-flex is-align-items-center'
            >
              <a
                href='/posts/{{this.id}}'
                class='has-text-dark'
              >{{this.title}}</a>
              <div class='metadata'>
                {{#if updated}}
                  <p class='is-size-7 has-text-right'>
                    Updated by
                    <span class='has-text-white has-text-weight-bold'>
                      {{user.username}}
                    </span>
                  </p>
                  <p class='has-text-right is-size-7'>
                    {{format_date updatedAt}}
                    ago
                  </p>
                {{else}}
                  <p class='is-size-7 has-text-right'>
                    Posted by
                    <span class='has-text-white has-text-weight-bold'>
                      {{user.username}}
                    </span>
                  </p>
                  <p class='has-text-right is-size-7'>
                    {{format_date createdAt}}
                    ago
                  </p>
                {{/if}}
              </div>
            </header>
            <section class='card-content px-3'>
              {{content}}
            </section>
          </li>
        {{/each}}
      </ul>
    </section>
  </section>
</div>