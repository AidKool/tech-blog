<main class='section px-4'>
  <section class='container'>
    <header class='article-header has-text-centered' data-postid='{{this.id}}'>
      <p class='title'>{{title}}</p>
      <p>Posted by
        <span class='has-text-weight-bold'>{{user.username}}</span>
        on
        {{format_date createdAt}}</p>
      {{#if updated}}
        <p>Updated on {{format_date updatedAt}}</p>
      {{/if}}
      <hr />
      <p>{{content}}</p>
      <hr />
    </header>
    {{#if loggedIn}}
      <p class='add-comment has-text-link has-text-weight-bold mt-3'>Add a
        comment</p>
      <div class='comment-form-container'>
        <form class='comment-form'>
          <label for='comment'>Post your comment</label>
          <textarea name='comment' id='comment'></textarea>
          <button class='button is-link' type='submit'>Submit</button>
          <button class='button is-danger cancel-btn'>Cancel</button>
        </form>
      </div>
    {{else}}
      <p class='mt-3'>
        <a href='/signup'>Sign up</a>
        or
        <a href='/login'>log in</a>
        to post a comment
      </p>
    {{/if}}
    {{#if comments}}
      <p class='mb-3 mt-3 subtitle'>Latest Replies:</p>
      <ul class='comment-list'>
        {{#each comments}}
          <li>
            <div class='card mb-3'>
              <header
                class='card-content py-2 px-3 is-size-7 is-flex is-justify-content-space-between'
              >
                <p>
                  <span
                    class='has-text-black has-text-weight-bold'
                  >{{user.username}}</span>
                  replied
                </p>
                <p class=''>
                  {{#if updated}}
                    Updated
                    {{format_date updatedAt}}
                  {{else}}
                    Posted
                    {{format_date createdAt}}
                  {{/if}}
                </p>
              </header>
              <div class='py-2 px-3'>
                <p>{{this.content}}</p>
              </div>
            </div>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class='mb-3 mt-3 first-comment'>Be the first to comment!</p>
    {{/if}}
  </section>
</main>
{{#if loggedIn}}
  <script src='/js/comments.js'></script>
{{/if}}